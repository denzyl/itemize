<%= form_for(@purchase, :html => {:class => 'form-inline'}) do |f| %>
<div class="row">
  <div class="form-group col-sm-2 col-xs-4">
    <%= f.label :purchased_on, "Date", class: 'control-label' %>
    <%= f.date_field :purchased_on, value: Date.today.to_s(:db), class: 'form-control' %>
  </div>
  <div class="form-group col-sm-2 col-xs-4">
    <%= f.label :place, "Place", class: 'control-label' %>
    <%= f.text_field :place, class: 'form-control' %>
  </div>
  <div class="form-group col-sm-2 col-xs-4">
   <%= f.label :purchased_total_cost, "Total Cost", class: 'control-label' %>
   <%= f.text_field :purchased_total_cost, class: 'form-control' %>
 </div>
</div>
<br>
<div class="row">
  <div class="col-sm-12">
<table class="table table-condensed table-striped" id="purchase_items">
  <thead>
    <tr>
      <th class="col-xs-1">#</th>
      <th class="col-xs-1">Brand name</th>
      <th class="col-sm-1">Item name</th>
      <th class="col-sm-1">Quantity</th>
      <td class="col-sm-1">Weight</th>
      <td class="col-sm-1">Measurement</th>
      <th class="col-sm-1">Cost</th>
      <th class="col-sm-1">Total Item Cost</th>
    </tr>
  </thead>
  <tbody>
    <%= f.fields_for :items do |item_form| %>
      <%= render 'item_fields', f: item_form %>
    <% end %>

  </tbody>
</table>
</div>
</div>
<div class="row">
  <div class="col-sm-12">
    <%= link_to_add_fields "Add Item", f, :items %>
    <%= f.submit @purchase.new_record? ? 'Create' : 'Update', :class => 'btn btn-primary' %>

      </div>
    </div>
    <br/>

<% end %>